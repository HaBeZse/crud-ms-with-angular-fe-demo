<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

    <changeSet id="profile-001-create-schema" author="you">
        <sql>CREATE SCHEMA IF NOT EXISTS profile;</sql>
    </changeSet>

    <changeSet id="profile-002-create-students" author="you">
        <createTable schemaName="profile" tableName="students">
        <column name="id" type="uuid">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="name" type="varchar(255)">
            <constraints nullable="false"/>
        </column>
        <column name="email" type="varchar(255)">
            <constraints nullable="false"/>
        </column>
        </createTable>

        <addUniqueConstraint
        schemaName="profile"
        tableName="students"
        columnNames="email"
        constraintName="uq_students_email"/>
    </changeSet>

</databaseChangeLog>
